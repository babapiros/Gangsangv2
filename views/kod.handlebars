<style>
    .game-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .game-icon {
        width: 80px;
        height: 80px;
        border-radius: 10px;
        border: 2px solid white;
    }
    .execute-btn {
        background: #7289da;
        color: white !important;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        text-decoration: none !important;
    }
    .code-block {
        background: #2b2b2b;
        padding: 1rem;
        border-radius: 5px;
        position: relative;
    }
    .copy-btn {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<title>LevyScript | {{kod.isim}}</title>
<main>
  <div class="container">
    <!-- Üst Bilgi -->
    <div class="game-header">
      <img src="{{kod.uploadedImage}}" class="game-icon" alt="Game Icon">
      <div>
        <h1 class="text-light">{{kod.game_name}}</h1>
        <span class="badge badge-secondary">{{kod.kod_rank}}</span>
      </div>
    </div>

    <!-- Yükleyen Bilgileri -->
    <div class="d-flex align-items-center gap-2 mb-4">
      <img src="{{kod.icon}}" class="rounded-circle" width="40" height="40">
      <span class="text-light">{{user.username}}</span>
      <span class="text-muted">•</span>
      <span class="text-muted">{{kod.createdAt}}</span>
    </div>

    <!-- Execute Butonu -->
    <a href="{{kod.modules}}" target="_blank" class="execute-btn mb-4 d-inline-block">Direct Execute</a>

    <!-- Açıklama -->
    <div class="bg-dark p-3 rounded mb-4">
      <p class="text-light mb-0">{{kod.desc}}</p>
    </div>

    <!-- Kod Blokları -->
    <div class="code-block mb-4">
      <button class="btn btn-sm btn-outline-light copy-btn" data-clipboard-target="#code_main">
        <i class="fas fa-copy"></i>
      </button>
      <pre class="text-light mb-0"><code id="code_main">{{kod.main_code}}</code></pre>
    </div>

    <!-- Resim Önizleme (Dosya Yükleme Sonucu) -->
    {{#if kod.uploadedImage}}
      <img src="{{kod.uploadedImage}}" class="img-fluid rounded mb-4" alt="Uploaded Image">
    {{/if}}
  </div>
</main>

<!-- Clipboard.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
<script>
    new ClipboardJS('.copy-btn');
</script>
